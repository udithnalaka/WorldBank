<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ud.mobile.worldbank"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    
    <uses-permission 
		android:name="android.permission.READ_CONTACTS"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_worldbank"
        android:label="@string/app_name"
        android:theme="@style/WorldBankTheme" >
        <activity
            android:name="com.ud.mobile.worldbank.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ud.mobile.worldbank.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.ud.mobile.worldbank.ManageAccountsActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.ud.mobile.worldbank.MoneyTransferActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.ud.mobile.worldbank.extra.TransferNotifyActivity"
            android:label="@string/title_activity_transfer_notify" >
        </activity>
    </application>

</manifest>